<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pathfindergametool.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/deathHP">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Смертельное ХП"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <Button
                android:id="@+id/minus1_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="-1"
                android:layout_marginLeft="5dp"/>
            <Button
                android:id="@+id/minus5_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/minus1_button"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="-5"
                android:layout_marginLeft="5dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/minus1_button"
                app:layout_constraintRight_toLeftOf="@+id/plus1_button"
                app:layout_constraintTop_toTopOf="parent">
                <EditText
                    android:id="@+id/hitTextView"
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:textAlignment="center"
                    android:textSize="42dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:maxLength="5"
                    android:inputType="numberSigned"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <Button
                android:id="@+id/plus1_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="+1"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/plus5_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/plus1_button"
                app:layout_constraintRight_toRightOf="parent"
                android:text="+5"
                android:layout_marginRight="5dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/deathHP"
            android:layout_marginTop="5dp"
            android:background="@color/black"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/deathHP"
            android:layout_marginTop="10dp"
            android:id="@+id/notDeathHP">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Немертельное ХП"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <Button
                android:id="@+id/minus1_button2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="-1"
                android:layout_marginLeft="5dp"/>

            <Button
                android:id="@+id/minus5_button2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/minus1_button2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="-5"
                android:layout_marginLeft="5dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/minus1_button2"
                app:layout_constraintRight_toLeftOf="@+id/plus1_button2"
                app:layout_constraintTop_toTopOf="parent">
                <EditText
                    android:id="@+id/hitTextView2"
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:textAlignment="center"
                    android:textSize="42dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:maxLength="5"
                    android:inputType="numberSigned"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/plus1_button2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="+1"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/plus5_button2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/plus1_button2"
                app:layout_constraintRight_toRightOf="parent"
                android:text="+5"
                android:layout_marginRight="5dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/notDeathHP"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="5dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spellCells"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notDeathHP"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Ячейки заклинаний"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="+"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="5dp"
                    android:id="@+id/cell1Plus"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="+"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cell1Plus"
                    android:layout_marginTop="5dp"
                    android:id="@+id/cell2Plus"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="+"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cell2Plus"
                    android:layout_marginTop="5dp"
                    android:id="@+id/cell3Plus"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="+"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cell3Plus"
                    android:layout_marginTop="5dp"
                    android:id="@+id/cell4Plus"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="+"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cell4Plus"
                    android:layout_marginTop="5dp"
                    android:id="@+id/cell5Plus"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="+"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cell5Plus"
                    android:layout_marginTop="5dp"
                    android:id="@+id/cell6Plus"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="+"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cell6Plus"
                    android:layout_marginTop="5dp"
                    android:id="@+id/cell7Plus"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="+"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cell7Plus"
                    android:layout_marginTop="5dp"
                    android:id="@+id/cell8Plus"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="+"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cell8Plus"
                    android:layout_marginTop="5dp"
                    android:id="@+id/cell9Plus"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="-"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="5dp"
                    android:id="@+id/cell1Minus"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="-"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cell1Minus"
                    android:layout_marginTop="5dp"
                    android:id="@+id/cell2Minus"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="-"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cell2Minus"
                    android:layout_marginTop="5dp"
                    android:id="@+id/cell3Minus"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="-"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cell3Minus"
                    android:layout_marginTop="5dp"
                    android:id="@+id/cell4Minus"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="-"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cell4Minus"
                    android:layout_marginTop="5dp"
                    android:id="@+id/cell5Minus"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="-"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cell5Minus"
                    android:layout_marginTop="5dp"
                    android:id="@+id/cell6Minus"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="-"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cell6Minus"
                    android:layout_marginTop="5dp"
                    android:id="@+id/cell7Minus"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="-"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cell7Minus"
                    android:layout_marginTop="5dp"
                    android:id="@+id/cell8Minus"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="-"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cell8Minus"
                    android:layout_marginTop="5dp"
                    android:id="@+id/cell9Minus"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="100dp">

                <EditText
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/cell1Value"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:maxLength="2"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="26dp"
                    android:layout_marginTop="5dp"/>

                <EditText
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/cell2Value"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cell1Value"
                    android:maxLength="2"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="26dp"
                    android:layout_marginTop="5dp"/>

                <EditText
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/cell3Value"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cell2Value"
                    android:maxLength="2"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="26dp"
                    android:layout_marginTop="5dp"/>

                <EditText
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/cell4Value"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cell3Value"
                    android:maxLength="2"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="26dp"
                    android:layout_marginTop="5dp"/>

                <EditText
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/cell5Value"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cell4Value"
                    android:maxLength="2"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="26dp"
                    android:layout_marginTop="5dp"/>

                <EditText
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/cell6Value"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cell5Value"
                    android:maxLength="2"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="26dp"
                    android:layout_marginTop="5dp"/>

                <EditText
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/cell7Value"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cell6Value"
                    android:maxLength="2"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="26dp"
                    android:layout_marginTop="5dp"/>

                <EditText
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/cell8Value"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cell7Value"
                    android:maxLength="2"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="26dp"
                    android:layout_marginTop="5dp"/>

                <EditText
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/cell9Value"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cell8Value"
                    android:maxLength="2"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="26dp"
                    android:layout_marginTop="5dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="100dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 круг"
                    android:textSize="26dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 круг"
                    android:textSize="26dp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 круг"
                    android:textSize="26dp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 круг"
                    android:textSize="26dp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 круг"
                    android:textSize="26dp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6 круг"
                    android:textSize="26dp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7 круг"
                    android:textSize="26dp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8 круг"
                    android:textSize="26dp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9 круг"
                    android:textSize="26dp"
                    android:layout_marginTop="20dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/spellCells"
            android:layout_marginTop="5dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/spellCells"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/moneyValues">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Деньги"
                android:textAlignment="center"/>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="15dp"
               android:layout_marginRight="5dp">

               <EditText
                   android:layout_width="150dp"
                   android:layout_height="50dp"
                   android:maxLength="7"
                   android:inputType="number"
                   android:id="@+id/platinumValue"
                   android:textAlignment="center"
                   android:textSize="26dp"/>
               <EditText
                   android:layout_width="150dp"
                   android:layout_height="50dp"
                   android:maxLength="7"
                   android:inputType="number"
                   android:id="@+id/goldValue"
                   android:textAlignment="center"
                   android:textSize="26dp"
                   android:layout_marginTop="3dp"/>
               <EditText
                   android:layout_width="150dp"
                   android:layout_height="50dp"
                   android:maxLength="7"
                   android:inputType="number"
                   android:id="@+id/silverValue"
                   android:textAlignment="center"
                   android:textSize="26dp"
                   android:layout_marginTop="3dp"/>
               <EditText
                   android:layout_width="150dp"
                   android:layout_height="50dp"
                   android:maxLength="7"
                   android:inputType="number"
                   android:id="@+id/cuprumValue"
                   android:textAlignment="center"
                   android:textSize="26dp"
                   android:layout_marginTop="3dp"/>
           </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Платина"
                    android:textSize="26dp"
                    android:layout_marginTop="10dp"
                    android:background="#e5e4e2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Золото"
                    android:textSize="26dp"
                    android:layout_marginTop="20dp"
                    android:background="#ffd700"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Серебро"
                    android:textSize="26dp"
                    android:layout_marginTop="20dp"
                    android:background="#c0c0c0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Медь"
                    android:textSize="26dp"
                    android:layout_marginTop="20dp"
                    android:background="#b87333"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/moneyValues"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="5dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/moneyValues"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Прочие заметки"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="10dp"
                android:id="@+id/otherNotes"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="top"
                android:inputType="textMultiLine"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>